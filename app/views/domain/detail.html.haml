- content_for :head do
  /[if IE]
    = javascript_include_tag "excanvas.compiled.js"
#result
  %h3
    Testergebnis
  %p
    = "URL: #{@domain.url}"
    %br
    %strong
      = "PageRank&trade;: #{@domain.pageranks.last.rank}"
    %br
    = link_to "Seite besuchen", "http://#{@domain.url}", :title => @domain.url, :target => "_blank"

#advertise
  %h3
    niedriger PageRank&trade;?
  %p
    Wir entwickeln preiswerte,
    %br
    zeitgem&auml;&szlig;e &amp; suchmaschienen-
    %br
    optimierte Webauftritte. 
    %br
    Weitere Infos: 
    = link_to "claasmartin.de", "http://www.claasmartin.de", :title => "claasmartin Hamburg | Konzeption, Webdesign, Interface Design, Information architecture, Web-Consulting aus dem Norden.", :target => "_blank"

#chart
  %h3
    PageRank-Verlauf
  #chart-container
  #data
    %table#data
      %tr
        %th<
          Datum
        %th<
          Rank
      - @domain.chart_ranks.each do |pagerank|
        %tr
          %td.data_date<
            = l(pagerank.created_at, :format => :short)
          %td.data_rank<
            = pagerank.rank