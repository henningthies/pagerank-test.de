/* centered fixed layout */

body {
text-align: center;
background: transparent url(<%=asset_path('bg.jpg')%>) repeat;
font-size: 12px;
font-family: Arial, Helvetiva, san-serif;
font-weight: bold;
}

#wrapper {
width: 480px;
margin: auto;
text-align: left;
}

/** clearfix for firefox */
#wrapper:after {
clear: both;
content: " ";
font-size: 0;
line-height: 0;
display: block;
height: 0;
visibility: hidden;
}

#header {
padding: 0 20px;
padding-top: 50px;
height: 60px;
}
h1 {
width: 200px;
height: 38px;

}
h1 a{
	color:red;
	font-size: 24px;
	color: #27405b;
	text-decoration:none;
}
h2 {
	font-weight: bold;
	font-size: 12px;
}
h2 a{

	color:#8baac9;
	text-decoration:none;
}


#main {
padding: 20px;
width: 440px;
background: #fefefe;
-moz-border-radius: 20px;
-webkit-border-radius: 20px;
border: 1px solid #dadbdc;
position: relative;
}

#main #content {
padding-top: 100px;
}
#result, #advertise, #chart {
padding: 0 0 20px 0;
}
#main form#domain_form {
position: absolute;
top: 20px;
left: 20px;
}
#chart-container {
width: 400px;
height: 150px;
position:relative;
padding:0;
}
div#data{
	padding:0 0 0 0;
}
#data table{
	display:none;
}
h3 {
font-size: 12px;
color: #222222;
}
p {
margin: 10px;
list-style: none;
color: #646464;
font-size: 11px;
}
a {
color: #848484;
}
#result {
width: 50%;
float: left;
}
#advertise {
width: 50%;
float: left;
height: 100px;
}

