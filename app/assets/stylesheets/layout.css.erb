#last_searches h4 {
font-size: 12px;
color: #222222;
}
#last_searches ul {
overflow: hidden;
margin: 10px;
padding: 0;
}
#last_searches li {
margin: 0;
padding: 0;
float: left;
list-style: none;
color: #646464;
font-size: 11px;
}

#footer {
margin: 10px;
clear: both;
font-size: 11px;
color: #888888;
padding: 0 0 20px 0;
}
#footer ul {
margin: 10px;
padding: 0;
}
#footer ul li {
list-style: none;
float: left;
width: 50%;
}
#footer ul li#copy {
text-align: right;
}


.flash_error {
position: absolute;
top: 80px;
font-weight: normal;
}

/** input field style **/
input#domain_url {
width: 413px;
display: inline-block;
outline: none;
text-decoration: none;
padding: 1em 1em 1.05em;
text-shadow: 0 1px 0px rgba(0,0,0,.4);
-webkit-border-radius: .5em;
-moz-border-radius: .5em;
border-radius: .5em;
}
input#domain_submit {
display: inline-block;
outline: none;
cursor: pointer;
text-align: center;
text-decoration: none;
padding: .5em 2em .55em;
text-shadow: 0 1px 1px rgba(0,0,0,.3);
-webkit-border-radius: 2em;
-moz-border-radius: 2em;
border-radius: .5em;
color: #ffffff;
border: solid 1px #688bae;
background: #8baac9;
background: -webkit-gradient(linear,left top,left bottom,from(#779cc0),to(#9fb8d2));
background: -moz-linear-gradient(top,#779cc0,#9fb8d2);
filter: progid:DXImageTransform.Microsoft.gradient(startColorstr='#779cc0',endColorstr='#9fb8d2');
}
input#domain_submit:hover {
text-decoration: none;
}
.blue {
color: #ffffff;
border: solid 1px #688bae;
background: #8baac9;
background: -webkit-gradient(linear,left top,left bottom,from(#779cc0),to(#9fb8d2));
background: -moz-linear-gradient(top,#779cc0,#9fb8d2);
filter: progid:DXImageTransform.Microsoft.gradient(startColorstr='#779cc0',endColorstr='#9fb8d2');
}
label {
display: none;
}



